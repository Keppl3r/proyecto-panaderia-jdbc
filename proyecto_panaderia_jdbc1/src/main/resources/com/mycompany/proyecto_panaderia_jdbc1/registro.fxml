<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<HBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.mycompany.proyecto_panaderia_jdbc1.RegistroController" prefWidth="800.0" prefHeight="600.0">
    
    <!-- Panel izquierdo con banner -->
    <VBox prefWidth="350.0" style="-fx-background-color: #3d2817;">
        <ImageView fitWidth="350.0" fitHeight="600.0" preserveRatio="false">
            <image>
                <Image url="@banner.png" />
            </image>
        </ImageView>
    </VBox>
    
    <!-- Panel derecho con formulario -->
    <VBox alignment="TOP_CENTER" spacing="15.0" style="-fx-background-color: linear-gradient(to bottom, #fdf5e6, #f5e6d3);" HBox.hgrow="ALWAYS">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>
        
        <!-- Logo -->
        <HBox alignment="CENTER" spacing="10.0">
            <ImageView fitHeight="50.0" fitWidth="50.0" preserveRatio="true">
                <image>
                    <Image url="@logo_2.png" />
                </image>
            </ImageView>
            <Label style="-fx-font-family: 'Segoe Script'; -fx-font-size: 28px; -fx-text-fill: #5a4a3a; -fx-font-weight: bold;" text="Pantojarte" />
        </HBox>
        
        <!-- Tarjeta de formulario -->
        <VBox alignment="TOP_CENTER" spacing="12.0" style="-fx-background-color: #f4c430; -fx-background-radius: 15; -fx-padding: 25;" maxWidth="380.0">
            
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #3a2a1a;" text="Registrarse" />
            
            <!-- Campo Nombres -->
            <VBox spacing="5.0">
                <Label style="-fx-font-size: 12px; -fx-text-fill: #3a2a1a; -fx-font-weight: bold;" text="Nombres" />
                <TextField fx:id="txtNombres" promptText="Ingrese sus nombres" style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 8;" />
            </VBox>
            
            <!-- Apellidos en la misma línea -->
            <HBox spacing="10.0">
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-size: 12px; -fx-text-fill: #3a2a1a; -fx-font-weight: bold;" text="Apellido p." />
                    <TextField fx:id="txtApellidoP" promptText="Apellido paterno" style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 8;" />
                </VBox>
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-size: 12px; -fx-text-fill: #3a2a1a; -fx-font-weight: bold;" text="Apellido m." />
                    <TextField fx:id="txtApellidoM" promptText="Apellido materno" style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 8;" />
                </VBox>
            </HBox>
            
            <!-- Campo Domicilio -->
            <VBox spacing="5.0">
                <Label style="-fx-font-size: 12px; -fx-text-fill: #3a2a1a; -fx-font-weight: bold;" text="Domicilio" />
                <TextField fx:id="txtDomicilio" promptText="Ingrese su domicilio" style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 8;" />
            </VBox>
            
            <!-- Campo Fecha de nacimiento -->
            <VBox spacing="5.0">
                <Label style="-fx-font-size: 12px; -fx-text-fill: #3a2a1a; -fx-font-weight: bold;" text="Fecha de nacimiento" />
                <DatePicker fx:id="dateFechaNacimiento" promptText="dd/mm/aaaa" style="-fx-background-color: white; -fx-background-radius: 5;" prefWidth="330.0" />
            </VBox>
            
            <!-- Apellidos adicionales (segunda fila) -->
            <HBox spacing="10.0">
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-size: 12px; -fx-text-fill: #3a2a1a; -fx-font-weight: bold;" text="Apellido p." />
                    <TextField fx:id="txtApellidoP2" promptText="Apellido paterno" style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 8;" />
                </VBox>
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-size: 12px; -fx-text-fill: #3a2a1a; -fx-font-weight: bold;" text="Apellido m." />
                    <TextField fx:id="txtApellidoM2" promptText="Apellido materno" style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 8;" />
                </VBox>
            </HBox>
            
            <!-- Imagen decorativa de pan -->
            <HBox alignment="CENTER_RIGHT">
                <ImageView fitHeight="50.0" fitWidth="80.0" preserveRatio="true">
                    <image>
                        <Image url="@pan.png" />
                    </image>
                </ImageView>
            </HBox>
            
            <!-- Botón Entrar -->
            <Button fx:id="btnEntrar" onAction="#handleEntrar" prefWidth="250.0" prefHeight="45.0" 
                    style="-fx-background-color: #6b5644; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;">
                <graphic>
                    <Label text="Entrar" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />
                </graphic>
            </Button>
            
        </VBox>
        
        <!-- Botón volver -->
        <Button fx:id="btnVolver" onAction="#handleVolver" text="← Volver" 
                style="-fx-background-color: transparent; -fx-text-fill: #6b5644; -fx-font-size: 14px; -fx-underline: true; -fx-cursor: hand;" />
        
    </VBox>
    
</HBox>


