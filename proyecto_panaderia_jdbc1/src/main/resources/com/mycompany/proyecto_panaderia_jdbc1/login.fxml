<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<HBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.mycompany.proyecto_panaderia_jdbc1.LoginController" prefWidth="750.0" prefHeight="550.0">
    
    <!-- Panel izquierdo con banner -->
    <VBox prefWidth="330.0" style="-fx-background-color: #3d2817;">
        <ImageView fitWidth="330.0" fitHeight="550.0" preserveRatio="false">
            <image>
                <Image url="@banner.png" />
            </image>
        </ImageView>
    </VBox>
    
    <!-- Panel derecho con formulario -->
    <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #fdf5e6, #f5e6d3);" HBox.hgrow="ALWAYS">
        <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
        </padding>
        
        <!-- Logo -->
        <HBox alignment="CENTER" spacing="10.0">
            <ImageView fitHeight="50.0" fitWidth="50.0" preserveRatio="true">
                <image>
                    <Image url="@logo_2.png" />
                </image>
            </ImageView>
            <Label style="-fx-font-family: 'Segoe Script'; -fx-font-size: 28px; -fx-text-fill: #5a4a3a; -fx-font-weight: bold;" text="Pantojarte" />
        </HBox>
        
        <!-- Tarjeta de formulario -->
        <VBox alignment="TOP_CENTER" spacing="18.0" style="-fx-background-color: #f4c430; -fx-background-radius: 15; -fx-padding: 35;" maxWidth="350.0" prefWidth="350.0">
            
            <Label style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #3a2a1a;" text="Iniciar Sesión" />
            
            <!-- Campo Nombre -->
            <VBox spacing="8.0" prefWidth="280.0">
                <Label style="-fx-font-size: 13px; -fx-text-fill: #3a2a1a; -fx-font-weight: bold;" text="Nombre" />
                <TextField fx:id="txtNombre" promptText="Ingrese su nombre de usuario" style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 10; -fx-font-size: 13px;" />
            </VBox>
            
            <!-- Campo Contraseña -->
            <VBox spacing="8.0" prefWidth="280.0">
                <Label style="-fx-font-size: 13px; -fx-text-fill: #3a2a1a; -fx-font-weight: bold;" text="Contraseña" />
                <PasswordField fx:id="txtPassword" promptText="Ingrese su contraseña" style="-fx-background-color: white; -fx-background-radius: 5; -fx-padding: 10; -fx-font-size: 13px;" />
            </VBox>
            
            <Region prefHeight="10.0" />
            
            <!-- Imagen decorativa de pan -->
            <HBox alignment="CENTER_RIGHT">
                <ImageView fitHeight="50.0" fitWidth="80.0" preserveRatio="true">
                    <image>
                        <Image url="@pan.png" />
                    </image>
                </ImageView>
            </HBox>
            
            <!-- Botón Entrar -->
            <Button fx:id="btnEntrar" onAction="#handleEntrar" prefWidth="250.0" prefHeight="50.0" 
                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;">
                <graphic>
                    <Label text="Entrar" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
                </graphic>
            </Button>
            
        </VBox>
        
        <!-- Botón volver -->
        <Button fx:id="btnVolver" onAction="#handleVolver" text="← Volver al inicio" 
                style="-fx-background-color: transparent; -fx-text-fill: #6b5644; -fx-font-size: 14px; -fx-underline: true; -fx-cursor: hand;" />
        
    </VBox>
    
</HBox>


